<div class="container-georges">
  <div class="ecran-interface-george">
    <div class="ecran-interface-george2">
        <div>
          <%= simple_form_for @preference do |f| %>
            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Faisons connaissance, moi c'est Georges et toi ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                name
              </div>
            </div>
            <%= f.input :visitor_name, placeholder: "Name", label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Tu as prévu de partir ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                roomate
              </div>
            </div>
            <%= f.input :roommate, collection: Preference::ROOMATE, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Quel est-ton budget ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                budget
              </div>
            </div>
            <%= f.input :budget, collection: Preference::BUDGET, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Ta journée idéale ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                day_activities
              </div>
            </div>
            <%= f.input :day_activities, collection: Preference::DAY_ACTIVITIES, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Tu es plutôt ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                biological_clock
              </div>
            </div>
            <%= f.input :biological_clock, collection: Preference::BIOLOGICAL_CLOCK, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Ton logement idéal ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                accommodation
              </div>
            </div>
            <%= f.input :accommodation, collection: Preference::ACCOMMODATION, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Ton coin idéal ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                spot
              </div>
            </div>
              <%= f.input :spot, collection: Preference::SPOT, label:false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Ta soirée idéale ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                night_activities
              </div>
            </div>
            <%= f.input :night_activities, collection: Preference::NIGHT_ACTIVITIES, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Qu'attends tu des vacances au ski...
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                expectations
              </div>
            </div>
            <%= f.input :expectations, collection: Preference::EXPECTATIONS, label: false %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Veux-tu être géolocalisé afin de profiter à 100% de notre service personnalisé?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                geocation
              </div>
            </div>
            <%= f.input :geocation, as: :boolean %>

            <div class="border-radius-10px bg-white w-50 p-2 m-2" >
              Combien de km es-tu prêt à faire ?
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px bg-blue w-50 p-2 m-2">
                kilometers
              </div>
            </div>
            <%= f.input :kilometers, collection: Preference::KILOMETERS, label: false %>
            <%= f.submit "blabla" %>


        </div>
        <div class="d-flex justify-content-end ">
          <div class="border-radius-10px bg-blue w-50 p-2 m-2">

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



