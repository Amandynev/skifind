<div id="georges" class="container-georges">
  <div class="ecran-interface-george">
    <div class="ecran-interface-george2">
        <div>
          <%= simple_form_for @preference do |f| %>

            <div class="d-flex justify-content-start" >
              <div class="border-radius-10px bg-white p-2 m-2" >
                Faisons connaissance, moi c'est Georges et toi ?
              </div>
            </div>
            <div class="d-flex justify-content-end ">
              <div class="border-radius-10px border-radius-10px mw-50 p-2 m-2">
                <%= f.input :visitor_name, placeholder: "Name", label: false %>
              </div>
            </div>


              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Tu as prévu de partir:
                </div>
              </div>
              <% Preference::ROOMMATE.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                  <div class="btn-georges roommate border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-roommate="<%= key %>"
                      style="cursor: pointer;">
                   <%= value %>
                  </div>
                </div>
              <% end %>
            <%= f.input :roommate, label: false, input_html: { class: 'd-none' } %>

              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Quel est-ton budget ?
                </div>
              </div>
              <% Preference::BUDGET.each do |key, value|%>
                <div class="d-flex justify-content-end">
                  <div class="btn-georges budget border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-budget="<%= key %>"
                       style="cursor: pointer;">
                      <%= value %>
                  </div>
                </div>
              <% end %>
              <%= f.input :budget, label: false, input_html: { class: 'd-none' } %>

              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Ta journée idéale :
                </div>
              </div>
              <% Preference::DAY_ACTIVITIES.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                  <div class="btn-georges day_activities border-radius-10px bg-blue mw-50 p-2 m-2"
                     data-day_activities="<%= key %>"
                     style="cursor: pointer;">
                    <%= value %>
                  </div>
                </div>
              <% end %>
              <%= f.input :day_activities, label: false, input_html: { class: 'd-none' } %>

              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Tu es plutôt...
                </div>
              </div>
              <% Preference::BIOLOGICAL_CLOCK.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                 <div class="btn-georges biological_clock border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-biological_clock="<%= key %>"
                       style="cursor: pointer;">
                    <%= value %>
                  </div>
                </div>
              <% end %>
              <%= f.input :biological_clock, label: false, input_html: { class: 'd-none' } %>

              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Ton logement idéal...
                </div>
              </div>
              <% Preference::ACCOMMODATION.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                  <div class="btn-georges accommodation border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-accommodation="<%= key %>"
                       style="cursor: pointer;">
                  <%= value %>
                  </div>
                </div>
              <% end %>
            <%= f.input :accommodation, label: false, input_html: { class: 'd-none' } %>
              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Ton coin idéal...
                </div>
              </div>
              <% Preference::SPOT.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                  <div class="btn-georges spot border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-spot="<%= key %>"
                       style="cursor: pointer;">
                    <%= value %>
                  </div>
                </div>
              <% end %>
              <%= f.input :spot, label: false, input_html: { class: 'd-none' } %>
              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Ta soirée idéale...
                </div>
              </div>
              <% Preference::NIGHT_ACTIVITIES.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                  <div class="btn-georges night_activities border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-night_activities="<%= key %>"
                       style="cursor: pointer;">
                    <%= value %>
                  </div>
                </div>
              <% end %>
              <%= f.input :night_activities, label: false, input_html: { class: 'd-none' } %>
              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Qu'attends tu des vacances au ski...
                </div>
              </div>
              <% Preference::EXPECTATIONS.each do |key, value|%>
                <div class="d-flex justify-content-end ">
                  <div class="btn-georges expectations border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-expectations="<%= key %>"
                       style="cursor: pointer;">
                    <%= value %>
                  </div>
                </div>
              <% end %>
            <%= f.input :expectations, label: false, input_html: { class: 'd-none' } %>
              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Veux-tu être géolocalisé afin de profiter à 100% de notre service personnalisé?
                </div>
              </div>
            <div class="d-flex justify-content-end">
              <div class="border-radius-10px bg-blue mw-50 p-2 m-2">
                geocation
              </div>
            </div>
            <%= f.input :geocation, as: :boolean %>
              <div class="d-flex justify-content-start" >
                <div class="border-radius-10px bg-white p-2 m-2" >
                  Combien de km es-tu prêt à faire ?
                </div>
              </div>
              <% Preference::KILOMETERS.each do |key, value|%>
                <div class="d-flex justify-content-end">
                  <div class="btn-georges kilometers border-radius-10px bg-blue mw-50 p-2 m-2"
                       data-kilometers="<%= key %>"
                       style="cursor: pointer;">
                    <%= value %>
                  </div>
                </div>
              <% end %>
            <%= f.input :kilometers, label: false, input_html: { class: 'd-none' } %>
            <%= f.submit "blabla" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



