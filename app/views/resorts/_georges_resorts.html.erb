                    <script>
                      let myChart = document.GetElementById('myChart').getContext('2d');
                      let resortChart = new Chart(myCart, {
                          type: 'doughnut',
                          data : {
                              labels : ['Station']
                              datasets : [{
                                label : 'Tes preferences',
                                data  : [
                                  resort[1],
                                ],
                              backgroundColor: 'rgba(54, 162, 235, 0.2)',
                              borderColor:  'rgba(54, 162, 235, 1)',
                              borderWidth: 1
                              }]
                          },
                          options: {
                            scales: {
                              yAxes: [{
                                ticks: {
                                  beginAtZero: true
                                }
                              }]
                            }
                          }
                      });
                    </script>
                    <div class="answer">
                          <%= resort[1] %>%
                      </div>
                  <% resort[0].preference.attributes.except("id", "latitude", "longitude", "visitor_name", "matchable_type", "matchable_id", "created_at", "updated_at", "spot", "biological_clock", "kilometers", "geocation").each do |k,v| %>
                    <p class="d-flex justify-content-between"><%= v %><i class="fas fa-check green-tick"></i></p>
                  <% end %>
                <% end %>
              </div>
            </div>
            <p class="localisation"><i class="fas fa-map-marked-alt icon-color"></i> <%= resort[0].mountains %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
