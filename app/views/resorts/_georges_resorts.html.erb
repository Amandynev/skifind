<head>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
</head>
  <% if !params[:query].present? %>
    <div class="banner-home d-flex justify-content-center align-items-center flex-column">
    <div class="container-title-index ">
      <div class="row">
        <div class="index-infos">
          <h2 class="title-index">Voici la meilleure sélection que je t'ai trouvé :</h2>
        </div>
      </div>
    </div>
    <div class="container d-flex justify-content-center">
      <div class="row">
        <% @resorts.each do |resort| %>
          <div class="col-12 col-lg-4">
            <div class="card">
              <div class="card-choose" >
                <%= link_to resort_path(resort), class: 'link-without-style' do %>
                  <%= image_tag resort[0].photo_asset, alt: "Tignes", class: "photo" %>
                  <%= image_tag resort[0].resort_name.downcase + '-logo.png', class: 'logo' %>
                  <h5><%= resort[0].resort_name %></h5>
