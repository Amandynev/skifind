


<!-----------------------carousel ------------------------->
<div id="resort-show" data-loc="<%= @loc.to_json %>"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
     <div class="carousel-inner ">
    <div class="carousel-caption ">
      <h1 class="resort-title mt-3"><%= @resort.resort_name %></h1>
      <p class="massif-show"> <%= @resort.mountains %> </p>
    </div>
    <% @resort.landscapes.each_with_index do |photo, index| %>
       <div class="carousel-item <%= 'active' if index == 0 %>">
         <div class="photo-caroussel" style="background-image: url('<%= cl_image_path photo.key %>');"></div>
       </div>
    <% end %>
    <!-- <div class="resort-title mt-3">
          <h3><%= @resort.resort_name %></h3>
          </div> -->
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <!-----------------------card station ------------------------->
<div class="container-show">
  <div class="card-station">
    <div class="card-station-info">

      <div class="slopes-pictogramme">

        <div class="total-slopes">

        </div>

        <div class="green-blue-slopes">
          <div class="green-slopes">
          </div>

          <div class="blue-slopes">
          </div>

        </div>

        <div class="red-black-slopes">
          <div class="red-slopes">
          </div>

          <div class="black-slopes">
          </div>

        </div>

      </div>

      <div class="infos-pictogramme">
          <div class="altitude"></div>
          <div class="snowpark"></div>
          <div class="kilometers-slopes"></div>

      </div>

      <div class="map">

      </div>

    </div>

    <div class="card-station-cta">

    </div>

  </div>
</div>
   <!-----------------------card activity ------------------------->

    <div class="container mt-5">
      <div class="row">
        <% @resort.activities.each do |activity|  %>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card-activity">
              <div class="inner">
                <%= cl_image_tag activity.photo.key, class: "card-img-top" %>
              </div>
              <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="card-title" style="text-align: center;"> <%= activity.activity_name %> </h5>
                <p class="card-text">
                  <%= activity.activity_description %>
                </p>
                <div class="d-flex justify-content-end flex-column" style="height: 100%;">
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
