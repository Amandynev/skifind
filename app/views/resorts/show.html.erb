


<!-----------------------carousel ------------------------->
<div id="resort-show" data-loc="<%= @loc.to_json %>"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
     <div class="carousel-inner ">
    <div class="carousel-caption ">
      <h1 class="resort-title mt-3"><%= @resort.resort_name %></h1>
      <p class="massif-show"> <%= @resort.mountains %> </p>
    </div>
    <% @resort.landscapes.each_with_index do |photo, index| %>
       <div class="carousel-item <%= 'active' if index == 0 %>">
         <div class="photo-caroussel" style="background-image: url('<%= cl_image_path photo.key %>');"></div>
       </div>
    <% end %>
    <!-- <div class="resort-title mt-3">
          <h3><%= @resort.resort_name %></h3>
          </div> -->
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!-----------------------title ------------------------->

<div class="container-show">
  <!-----------------------card descritpion ------------------------->
  <div class="container-show d-flex">
    <%= render 'shared/map' %>

    <div class="card-description" >
        <div class="pictogramme d-flex justify-content-around mt-4">

          <div class="pictogramme-right border-right pr-5 ">
            <div class="slopes">
              <div class="slopes-title d-flex align-items-center">
                 <i class="fas fa-skiing pictogramme-color"></i><span><%= @resort.slopes_title    %></span>
              </div>

              <div class="slopes-colors d-flex align-items-center">
                <div class="colors-left flex-column mr-3">
                   <span><%= @resort.slopes_green %></span><i class="fas fa-circle circle-green d-flex flex-column align-items-center mb-3"></i>
                   <span><%= @resort.slopes_blue %></span><i class="fas fa-circle circle-blue d-flex flex-column align-items-center mb-3"></i>
                 </div>
                 <div class="colors-right flex-column ">
                   <span><%= @resort.slopes_red %></span><i class="fas fa-circle circle-red d-flex flex-column align-items-center mb-3"></i>
                   </i><%= @resort.slopes_black %></span><i class="fas fa-circle circle-black d-flex flex-column align-items-center mb-3"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="pictogramme-left border-right pr-5 ">
            <div class="altitude d-flex align-items-center">
              <i class="fas fa-mountain pictogramme-color"></i><span><%= @resort.altitude %></span>
            </div>
            <div class="opening d-flex align-items-center">
              <i class="far fa-calendar-alt pictogramme-color"></i><span><%= @resort.opening_time %></span>
            </div>
            <div class="free-carpak d-flex align-items-center">
              <i class="fas fa-parking pictogramme-color"></i><span><%= @resort.free_carpark %></span>
            </div>
          </div>

          <div class="pictogramme-middle ">
            <div class="kids-garden d-flex align-items-center">
              <i class="fas fa-child pictogramme-color"></i><span><%= @resort.kids_garden %></span>
            </div>
            <div class="snowpark d-flex align-items-center">
              <i class="fas fa-snowboarding pictogramme-color"></i><span><%= @resort.snowpark %></span>
            </div>
          </div>



        </div>

        <div class="description">
          <%= @resort.resort_description %>
          <div class="site-officiel">
           
            <%= link_to "Site officiel", @resort.resort_website, class: "buton-primary", target: "_blank"  %>
            <%= link_to "Toutes les stations", resorts_path, class: "buton-primary" %>
          </div>
        </div>
        <p class="localisation-show"> <i class="fas fa-map-marked-alt icon-color"></i> <%= @resort.resort_address %></p>

    </div>
  </div>
</div>
    <div class="container mt-5">
      <div class="row">
        <% @resort.activities.each do |activity|  %>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card-activity">
              <div class="inner">
                <%= cl_image_tag activity.photo.key, class: "card-img-top" %>
              </div>
              <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="card-title" style="text-align: center;"> <%= activity.activity_name %> </h5>
                <p class="card-text">
                  <%= activity.activity_description %>
                </p>
                <div class="d-flex justify-content-end flex-column" style="height: 100%;">
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
