


<!-----------------------carousel ------------------------->
<div id="resort-show" data-loc="<%= @loc.to_json %>"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
     <div class="carousel-inner ">
    <div class="carousel-caption ">
      <h1 class="resort-title mt-3"><%= @resort.resort_name %></h1>
      <p class="massif-show"> <%= @resort.mountains %> </p>
    </div>
    <% @resort.landscapes.each_with_index do |photo, index| %>
       <div class="carousel-item <%= 'active' if index == 0 %>">
         <div class="photo-caroussel" style="background-image: url('<%= cl_image_path photo.key %>');"></div>
       </div>
    <% end %>
    <!-- <div class="resort-title mt-3">
          <h3><%= @resort.resort_name %></h3>
          </div> -->
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <!-----------------------card station ------------------------->
<div class="container-show">
  <div class="back-cta">
    <%= link_to "Mes résultats", resorts_path, class: "buton-primary-show link-without-style" %>

  </div>

  <!-----------------------card station ------------------------->
  <div class="card-station">
    <div class="card-station-info">

      <div class="slopes-pictogramme">

        <div class="total-slopes">

            <i class="fas fa-skiing fa-10x pictogramme-color " style="font-size: 34px;"></i><span class="size-number"><%= @resort.slopes_title %> </span><span class="span-picto"> pistes </span>

        </div>

        <div class="pair-slopes">
          <div class="green-slopes">
            <%= @resort.slopes_green %>
          </div>

          <div class="blue-slopes">
            <%= @resort.slopes_blue %>
          </div>
        </div>

        <div class="pair-slopes">
          <div class="red-slopes">
            <%= @resort.slopes_red %>
          </div>
          <div class="black-slopes">
            <%= @resort.slopes_black %>
          </div>
        </div>

      </div>

      <div class="infos-pictogramme">
          <div class="altitude">
            <i class="fas fa-mountain pictogramme-color" style="font-size: 34px;"></i><span class="size-number"><%= @resort.altitude.split[0] %></span> <span class="span-picto"> mètres</span>
          </div>
          <div class="snowpark">
             <i class="fas fa-snowboarding pictogramme-color" style="font-size: 34px;"></i><span class="size-number"><%= @resort.snowpark.split[0] %></span> <span class="span-picto"> snowparks</span>
          </div>
          <div class="kilometers-slopes">
            <i class="fas fa-bacon pictogramme-color" style="font-size: 34px;"></i><span class="size-number"><%= @resort.kids_garden.split[0] %></span><span class="span-picto"> km de pistes</span>
          </div>
      </div>

    </div>

        <%= render 'shared/map' %>


    <div class="card-station-cta">
      <div class="d-flex justify-content-center align-items-center pb-4">
        <div class="button-website">
          <%= link_to "Réserve ton séjour", @resort.resort_website, class: "buton-primary-show link-without-style", target: "_blank"  %>
        </div>
      </div>
      <div></div>
    </div>

  </div>

<div class="description">

  <div class="title-description">

    <h2 lass="title-description-size"> Pourquoi <%= @resort.resort_name %> ? </h2>

  </div>

  <div class="text-infos">
    <%= @resort.resort_description %>
  </div>
</div>
</div>

   <!-----------------------card activity ------------------------->

    <div class="container mt-5">
      <div class="row">
        <% @resort.activities.each do |activity|  %>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card-activity">
              <div class="inner">
                <%= cl_image_tag activity.photo.key, class: "card-img-top" %>
              </div>
              <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="card-title" style="text-align: center;"> <%= activity.activity_name %> </h5>
                <p class="card-text">
                  <%= activity.activity_description %>
                </p>
                <div class="d-flex justify-content-end flex-column" style="height: 100%;">
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
